                                        <ListBox Name="MiningItemsListBox" ItemsSource="{Binding MiningItems}" Background="Gray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Weaving" FontSize="16">
                            <ScrollViewer>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Expander Name="WeavingRecipesExpander" Grid.Row="0" Header="Recipes" ExpandDirection="Down" IsExpanded="True" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="WeavingRecipesListBox" ItemsSource="{Binding WeavingRecipes}" Background="Gray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>

                                    <Expander Name="WeavingItemsExpander" Grid.Row="1" Header="Items" ExpandDirection="Down" IsExpanded="false" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="WeavingItemsListBox" ItemsSource="{Binding WeavingItems}" Background="Gray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Woodcutting" FontSize="16">
                            <ScrollViewer>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Expander Name="WoodcuttingRecipesExpander" Grid.Row="0" Header="Recipes" ExpandDirection="Down" IsExpanded="True" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="WoodcuttingRecipesListBox" ItemsSource="{Binding WoodcuttingRecipes}" Background="Gray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
