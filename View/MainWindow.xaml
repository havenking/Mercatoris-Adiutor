                                <Grid Background="Black">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Source="{StaticResource AlchemyImageSource}" Width="16" Height="16" Margin="5,0"/>

                                    <TextBlock Grid.Column="1" Text="Alchemy" Margin="5,0" Foreground="White"/>
                                </Grid>
                            </TabItem.Header>

                            <TabControl>
                                <TabItem Header="Recipes">
                                    <ScrollViewer>
                                        <ListBox ItemsSource="{Binding BlacksmithingRecipes}" Background="LightGray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="Text" Background="Gray"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="Items">
                                    <ScrollViewer>
                                        <ListBox ItemsSource="{Binding BlacksmithingItems}" Background="LightGray">
