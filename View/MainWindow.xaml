                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Source="{StaticResource WoodcuttingImageSource}" Width="16" Height="16"  Margin="5,0"/>

                                    <TextBlock Grid.Column="1" Text="Woodcutting" Foreground="White"/>
                                </Grid>
                            </TabItem.Header>

                            <TabControl Padding="0" Margin="0" BorderThickness="0,2,0,0" BorderBrush="White">
                                <view:ImprovedTabItem>
                                    <TabItem.Header>
                                        <Grid Background="Black">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0" Source="{StaticResource TreeImageSource}" Width="16" Height="16"  Margin="5,0"/>

                                            <TextBlock Grid.Column="1" Text="Trees" Margin="5,0" Foreground="White"/>
                                        </Grid>
                                    </TabItem.Header>

                                    <ListBox Margin="0" Padding="0" BorderThickness="0" ItemsSource="{Binding WoodcuttingObjects}" Background="Black">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="Text" Margin="5,0" Background="Gray"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </view:ImprovedTabItem>

                                <view:ImprovedTabItem>
                                    <TabItem.Header>
                                        <Grid Background="Black">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0" Source="{StaticResource ItemImageSource}" Width="16" Height="16"  Margin="5,0"/>

                                            <TextBlock Grid.Column="1" Text="Items" Margin="5,0" Foreground="White"/>
                                        </Grid>
                                    </TabItem.Header>

                                    <ListBox ItemsSource="{Binding WoodcuttingItems}" Background="Black">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                                            </Style>
                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <view:ItemCatalog/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </view:ImprovedTabItem>
                            </TabControl>
                        </view:ImprovedTabItem>

                        <view:ImprovedTabItem IsEnabled="false" FontSize="16">
                            <TabItem.Header>
                                <Grid Background="Black">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Source="{StaticResource MonsterDropImageSource}" Width="16" Height="16"  Margin="5,0"/>

                                    <TextBlock Grid.Column="1" Text="Monster Drop" Foreground="White"/>
                                </Grid>
                            </TabItem.Header>

                            <ListBox ItemsSource="{Binding MonsterDropItems}" Background="LightGray">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Text" Background="Gray"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </view:ImprovedTabItem>

                        <view:ImprovedTabItem IsEnabled="false" FontSize="16">
                            <TabItem.Header>
                                <Grid Background="Black">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0" Source="{StaticResource TradepackImageSource}" Width="16" Height="16"  Margin="5,0"/>

                                    <TextBlock Grid.Column="1" Text="Tradepacks" Foreground="White"/>
                                </Grid>
                            </TabItem.Header>

                            <ListBox ItemsSource="{Binding TradepackRecipes}" Background="Black">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </view:ImprovedTabItem>
                    </TabControl>
                </Grid>
            </view:ImprovedTabItem>

            <view:ImprovedTabItem x:Name="DetailsTab" IsEnabled="false" FontSize="18">
                <TabItem.Header>
                    <Grid Background="Black">
                        <TextBlock Grid.Column="1" Text="Details" Margin="5,0" Foreground="White"/>
                    </Grid>
                </TabItem.Header>
                
                <Grid Background="Black">

                </Grid>
            </view:ImprovedTabItem>
        </TabControl>
    </Grid>
</Window>
