                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>

                                    <Expander Name="CookingItemsExpander" Grid.Row="1" Header="Items" ExpandDirection="Down" IsExpanded="false" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="CookingItemsListBox" ItemsSource="{Binding CookingItems}" Background="Gray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Farming" FontSize="16">
