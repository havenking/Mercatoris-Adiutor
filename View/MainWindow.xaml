                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>

                                    <Expander Name="WoodcuttingItemsExpander" Grid.Row="1" Header="Items" ExpandDirection="Down" IsExpanded="false" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="WoodcuttingItemsListBox" ItemsSource="{Binding WoodcuttingItems}" Background="Gray">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
