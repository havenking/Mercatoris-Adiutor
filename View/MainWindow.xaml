                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Expander Name="CookingRecipesExpander" Grid.Row="0" Header="Recipes" ExpandDirection="Down" IsExpanded="True" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="CookingRecipesListBox" ItemsSource="{Binding CookingRecipes}" Background="Gray">
