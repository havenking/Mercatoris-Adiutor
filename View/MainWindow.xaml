                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Monster Drop" FontSize="16">
                            <ScrollViewer>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Expander Name="MonsterItemsExpander" Grid.Row="1" Header="Items" ExpandDirection="Down" IsExpanded="false" VerticalAlignment="Top" Background="LightGray">
                                        <ListBox Name="MonsterItemsListBox" ItemsSource="{Binding MonsterItems}" Background="Gray">
