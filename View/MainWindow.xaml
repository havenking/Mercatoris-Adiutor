                                    </Expander>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Tradepacks" FontSize="16">
                            <ScrollViewer>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <ListBox Name="TradepackRecipesListBox" ItemsSource="{Binding TradepackRecipes}" Background="Gray">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Mode=OneWay}" Background="Gray"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Details"  FontSize="16">
                <Grid Background="Gray">
                    
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
